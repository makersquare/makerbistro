<%= form_for(@menu_item) do |f| %>
  <% if @menu_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@menu_item.errors.count, "error") %> prohibited this menu_item from being saved:</h2>

      <ul>
      <% @menu_item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.number_field :price %>
  </div>
  <div class="field">
    <%= f.label :ingredient %><br>
    <% Ingredient.all.each do |ingredient| %>
      <%= check_box_tag(ingredient.id) %>
      <%= label_tag(ingredient.name, ingredient.name) %>

    <% end %>


  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>